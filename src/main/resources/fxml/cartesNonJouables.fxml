<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<fx:root spacing="10.0" type="VBox" xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1" style="-fx-background-color: rgba(0,0,0,0.5)">
    <Label fx:id="labelCartesRecues" styleClass="main-font" text=" Cartes Reçues" style="-fx-text-fill: white"/>
    <StackPane fx:id="cartesRecues" style="-fx-border-radius: 25;">
      <styleClass>
         <String fx:value="conteneur-cartes" />
         <String fx:value="bordures" />
      </styleClass></StackPane>
    <Label fx:id="labelCartesDefausse" styleClass="main-font" text=" Cartes Défaussées" style="-fx-text-fill: white"/>
    <StackPane fx:id="cartesDefausse" style="-fx-border-radius: 25;">
      <styleClass>
         <String fx:value="conteneur-cartes" />
         <String fx:value="bordures" />
      </styleClass></StackPane><!-- spacing="5" style="-fx-padding: 10;"-->
    <Label fx:id="labelCartesEnJeu" styleClass="main-font" text=" Cartes en jeu" style="-fx-text-fill: white"/>
    <StackPane fx:id="cartesEnJeu" style="-fx-border-radius: 25;">
      <styleClass>
         <String fx:value="conteneur-cartes" />
         <String fx:value="bordures" />
      </styleClass></StackPane><!-- spacing="5" style="-fx-padding: 10;"-->
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</fx:root>
