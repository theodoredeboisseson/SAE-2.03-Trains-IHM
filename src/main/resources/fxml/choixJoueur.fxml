<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root alignment="CENTER" spacing="20.0" style="-fx-background-color: #f5f5f5;" type="VBox" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 20px;" text="Mise en place" />
    <HBox alignment="CENTER" spacing="20.0">
        <Spinner fx:id="spinner" editable="true" initialValue="2" max="4" min="2" />
    </HBox>
    <VBox fx:id="joueursNoms" alignment="CENTER" prefHeight="200.0" prefWidth="300.0" spacing="10.0" style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-width: 1px; -fx-padding: 10px; -fx-background-radius: 5px; -fx-border-radius: 5px;" />
    <HBox alignment="CENTER" spacing="20.0">
        <Label style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;" text="Choix du Plateau:" />
        <ComboBox fx:id="plateauComboBox" prefWidth="150.0" style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-width: 1px; -fx-font-size: 14px; -fx-padding: 5px; -fx-background-radius: 5px; -fx-border-radius: 5px;" />
        <ImageView fx:id="plateauView" />
    </HBox>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../images/TokyoSansContour.jpg"/>
            </ImageView>
            <Label text="Tokyo"/>
        </VBox>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../images/OsakaSansContour.jpg"/>
            </ImageView>
            <Label text="Osaka"/>
        </VBox>
    </HBox>
    <Button fx:id="start" mnemonicParsing="false" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-background-radius: 20px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 5);" text="Commencer" />
</fx:root>
